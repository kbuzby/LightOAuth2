<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
	  <Nullable>enable</Nullable>
	  <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	  <Version>0.1.0</Version>
	  <Authors>Kyle Buzby</Authors>
	  <Company />
	  <Copyright>Kyle Buzby 2021</Copyright>
	  <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
	  <Description>Lightweight .NET 5 project to support OAuth2 flows, particularly from a desktop application</Description>
	  <RepositoryUrl>https://github.com/kbuzby/LightOAuth2</RepositoryUrl>
	  <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <None Remove=".gitignore" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.WebUtilities" Version="2.2.0" />
  </ItemGroup>
</Project>